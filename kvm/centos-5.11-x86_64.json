{
  "variables": {
    "build_name": "CentOS_5.11-x86_64",
    "core": "1",
    "memory": "1024",
    "disk_size": "51200",
    "ssh_port": "22",
    "ssh_wait_timeout": "10000s",
    "iso_url": "{{env `URL_PATH`}}/CentOS-5.11-x86_64-minimal.iso",
    "iso_checksum": "422af57b493b8af49d485885a730c5a1d955f803fac85aa51311c393168b9080",
    "iso_checksum_type": "sha256",
    "ks_path": "centos-5.11/ks.cfg",
    "short_name": "centos511"
  },
  "builders": [
    {
      "name": "{{user `build_name`}}",
      "type": "qemu",
      "format": "qcow2",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "packer-build-kvm",
      "shutdown_command": "echo 'packer' | sudo -S /sbin/halt -h -p",
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "qemuargs": [
        [ "-m", "size={{user `memory`}}" ],
        [ "-smp", "2,sockets=2,cores={{user `core`}},threads=1" ]
      ],
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "headless": true,
      "vm_name": "{{user `short_name`}}",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_compression": true,
      "boot_wait": "5s",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "vnc_bind_address": "0.0.0.0",
      "vnc_port_min": 5947,
      "vnc_port_max": 5947,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "packer",
      "ssh_password": "packer",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "boot_command":
      [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/centos-5/base.sh",
        "scripts/centos-5/custom_kvm.sh",
        "scripts/centos-5/zerodisk.sh",
        "scripts/centos-5/cleanup.sh"
      ]
    }
  ]
}