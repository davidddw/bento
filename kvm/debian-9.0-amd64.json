{
  "variables": {
    "build_name": "Debian_9.0.0-x86_64",
    "core": "1",
    "memory": "1024",
    "disk_size": "51200",
    "ssh_port": "22",
    "ssh_wait_timeout": "10000s",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "iso_url": "{{env `URL_PATH`}}/debian-9.0.0-amd64-netinst.iso",
    "iso_checksum": "9d98f339016dc2a3998881949a8f0678baede26b5106f18ef1168d7e13606773",
    "iso_checksum_type": "sha256",
    "preseed_path": "debian-9/preseed.cfg",
    "short_name": "debian90"
  },
  "builders": [
    {
      "name": "{{user `build_name`}}",
      "type": "qemu",
      "format": "qcow2",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "packer-build-kvm",
      "shutdown_command": "echo 'packer' | sudo -S /sbin/shutdown -hP now",
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "qemuargs": [
        [ "-m", "size={{user `memory`}}" ],
        [ "-smp", "2,sockets=2,cores={{user `core`}},threads=1" ]
      ],
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "headless": true,
      "vm_name": "{{user `short_name`}}",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_compression": true,
      "boot_wait": "5s",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "vnc_bind_address": "0.0.0.0",
      "vnc_port_min": 5947,
      "vnc_port_max": 5947,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "packer",
      "ssh_password": "packer",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "boot_command":
      [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed_path`}} <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=packer.org <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "environment_vars": [
        "HOME_DIR=/home/packer",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "type": "shell",
      "scripts": [
        "scripts/debian-9/base.sh",
        "scripts/debian-9/custom_kvm.sh",
        "scripts/debian-9/zerodisk.sh",
        "scripts/debian-9/cleanup.sh"
      ]
    }
  ]
}