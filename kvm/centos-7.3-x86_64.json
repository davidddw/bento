{
  "variables": {
    "build_name": "CentOS_7.3-x86_64",
    "core": "1",
    "memory": "1024",
    "disk_size": "51200",
    "ssh_port": "22",
    "ssh_wait_timeout": "10000s",
    "iso_url": "http://192.168.1.200:8090/CentOS-7-x86_64-Minimal-1611.iso",
    "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
    "iso_checksum_type": "sha256",
    "ks_path": "centos-7.3/ks.cfg",
    "short_name": "centos73"
  },
  "builders": [
    {
      "name": "{{user `build_name`}}",
      "type": "qemu",
      "format": "qcow2",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "packer-build-kvm",
      "shutdown_command": "shutdown -h now",
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "qemuargs": [
        [ "-m", "size={{user `memory`}}" ],
        [ "-smp", "2,sockets=2,cores={{user `core`}},threads=1" ]
      ],
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "headless": true,
      "vm_name": "{{user `short_name`}}",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_compression": true,
      "boot_wait": "5s",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "vnc_bind_address": "0.0.0.0",
      "vnc_port_min": 5947,
      "vnc_port_max": 5947,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "packer",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "boot_command":
      [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/centos-7.3/base.sh",
        "scripts/centos-7.3/custom_kvm.sh",
        "scripts/centos-7.3/zerodisk.sh",
        "scripts/centos-7.3/cleanup.sh"
      ]
    }
  ]
}