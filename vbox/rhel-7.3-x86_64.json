{
  "variables": {
    "build_name": "RHEL_7.3-x86_64",
    "core": "1",
    "memory": "1024",
    "disk_size": "51200",
    "ssh_port": "22",
    "ssh_wait_timeout": "10000s",
    "iso_url": "{{env `URL_PATH`}}/CentOS-7-x86_64-Minimal-1611.iso",
    "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
    "iso_checksum_type": "sha256",
    "ks_path": "centos-7.3/ks.cfg",
    "short_name": "rhel73"
  },
  "builders": [
    {
      "name": "{{user `build_name`}}",
      "type": "virtualbox-iso",
      "format": "ova",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "guest_os_type": "RedHat_64",
      "output_directory": "packer-build-vbox",
      "shutdown_command": "echo 'packer' | sudo -S /sbin/halt -h -p",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{ user `core` }}"]
      ],
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "headless": true,
      "vm_name": "{{user `short_name`}}",
      "hard_drive_interface": "sata",
      "boot_wait": "5s",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "vrdp_bind_address": "0.0.0.0",
      "vrdp_port_min": 5947,
      "vrdp_port_max": 5947,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "packer",
      "ssh_password": "packer",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "boot_command":
      [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/centos-7/base.sh",
        "scripts/centos-7/custom_kvm.sh",
        "scripts/centos-7/zerodisk.sh",
        "scripts/centos-7/cleanup.sh"
      ]
    }
  ]
}